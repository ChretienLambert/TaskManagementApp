<!-- LoginPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManagementApp.Pages.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Enter your login code" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="CodeEntry" Placeholder="Enter 6-digit code" Keyboard="Numeric" MaxLength="6" />
        <Button Text="Login" Clicked="OnLoginClicked" />
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
    </VerticalStackLayout>
</ContentPage>

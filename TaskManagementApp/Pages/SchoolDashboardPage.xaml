<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="TaskManagementApp.Pages.SchoolDashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:TaskManagementApp.Models">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="School Tasks" FontSize="32" HorizontalOptions="Center" />

        <Button Text="Create New Task" Clicked="OnCreateTaskClicked" BackgroundColor="Green" TextColor="White" CornerRadius="10"/>
        <CollectionView x:Name="TaskListView"
                        ItemsSource="{Binding Tasks}"
                        SelectionChanged="OnTaskSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:TaskModel">
                    <Frame Margin="5" Padding="10" BorderColor="Gray">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold"/>
                            <Label Text="{Binding Description}" FontSize="12"/>
                            <Label Text="{Binding Status}" FontSize="10"/>
                            <Label Text="{Binding Type}" FontSize="10"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
